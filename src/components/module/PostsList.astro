---
const { posts } = Astro.props;
---

<div class="flex flex-col gap-8 py-8 sm:col-span-2">
  <div>
    <h3>Posts</h3>
    <ul class="list-inside list-disc">
      {
        posts.map((post: any) => (
          <li>
            <a href={post.url}>{post.frontmatter.title}</a>
          </li>
        ))
      }
    </ul>
  </div>
</div>
