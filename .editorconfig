# This file is the top-most EditorConfig file
root = true

# All Files
[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# JSON Files
[*.json]
indent_size = 2

# YAML Files
[*.yaml]
indent_size = 2

# Markdown Files
[*.md]
trim_trailing_whitespace = false

# Web Files
[*.{html,ts,tsx,cjs,mjs,css,svg,astro}]
indent_size = 2
